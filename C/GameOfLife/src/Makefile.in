SRC = @srcdir@
IDIR = @srcdir@/../include
CC = @CC@
CFLAGS = @CFLAGS@ -I$(IDIR)

ODIR = @srcdir@/obj
LDIR = @srcdir@/lib

LIBS = @LIBS@ -lm


_DEPS = matrix.h
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ_main = matrix.o gameoflife.o
OBJ_main = $(patsubst %,$(ODIR)/%,$(_OBJ_main))

_OBJ_tests = matrix.o tests.o
OBJ_tests = $(patsubst %,$(ODIR)/%,$(_OBJ_tests))


all: gameoflife tests

gameoflife: $(OBJ_main)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

tests: $(OBJ_tests)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

check:
	./tests

install:
	@INSTALL@ -m 775 gameoflife @prefix@/bin

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~

clean_make:
	rm Makefile

distclean: clean clean_make

$(ODIR)/%.o: $(SRC)/%.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)
